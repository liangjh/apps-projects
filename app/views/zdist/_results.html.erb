

<%#
  Z distribution: rendering
  Local vars:
    - z_dist
%>

<%
  row_span  = 2
  row_span += 1 if z_dist.left_dist.present?
  row_span += 1 if z_dist.right_dist.present?
%>


<table class="table table-bordered table-hover">
  <thead>
    <th>z-value</th>
    <th>alpha<br/>p(Z&lt;z)</th>
    <th>p(Z&gt;z)</th>
  </thead>
  <tbody>
    <% if z_dist.left_dist.present? %>
      <tr>
        <td><%=z_dist.left_dist.zv%></td>
        <td><%=z_dist.left_dist.p_lt_zv%></td>
        <td><%=z_dist.left_dist.p_gt_zv%></td>
      </tr>
    <% end %>
    <tr class="success">
      <td><%=z_dist.zv%></td>
      <td><%=z_dist.p_lt_zv%></td>
      <td><%=z_dist.p_gt_zv%></td>
    </tr>
    <% if z_dist.right_dist.present? %>
      <tr>
        <td><%=z_dist.right_dist.zv%></td>
        <td><%=z_dist.right_dist.p_lt_zv%></td>
        <td><%=z_dist.right_dist.p_gt_zv%></td>
      </tr>
    <% end %>
  </tbody>
</table>




