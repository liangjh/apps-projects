<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Saintstir</title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <!-- Le styles -->
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <!-- Javascripts -->
    <%= javascript_include_tag "application" %>
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>

  </head>

  <body>

    <!--// Top Navbar -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
          <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="i-bar"></span>
            <span class="i-bar"></span>
            <span class="i-bar"></span>
          </a>
          <a class="brand" href="/">saintstir</a>
          <div>
            <ul class="nav pull-right">
              <li><%= link_to "Explore", saints_path %></li>
              <li><%= link_to "Administration", admin_saints_path %></li>
              <%
                if (current_user)
              %>
                  <li><%= link_to current_user.email, "#" %></li>
                  <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
              <%
                else
              %>
                  <li><%= link_to "Sign In", new_user_session_path %></li>
                  <li><%= link_to "Sign Up", new_user_registration_path %></li>
              <%
                end
              %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!--// Header, Logo -->
    <div class="container-fluid">
      <div class="content">
        <div class="row">
          <div class="span6">
            <%# image_tag "saintstir_logo_large.jpg" %>
          </div>
      </div>
      </div>
   </div>


  <%
      #  has error message
      if (flash[:error])
        %><div class="alert alert-error"><%=flash[:error]%></div><%
      end
      # has notice (status) message
      if (flash[:notice])
        %><div class="alert alert-info"><%=flash[:notice]%></div><%
      end
  %>

  <div class="container-fluid">
  </div>


    <!--// Main page content -->
    <div class="container-fluid">
        <div class="content">
          <div class="row">
            <div class="span12">
            <!--// Yield to page content -->
            <%= yield %>
            </div>
          </div>
        </div>
    </div>

    <br/><br/><br/>
    <!--// Footer -->
    <div class="container-fluid">
      <div class="content">
        <div class="row">
          <div class="span10">
            <a href="#">About</a> &nbsp;&nbsp;&nbsp;&nbsp;
            <a href="#">Contact</a> &nbsp;&nbsp;&nbsp;&nbsp;
            <a href="#">@Saintstir</a>
          </div>
          <div class="span2">
            &copy; Saintstir <%=Time.now.to_date.strftime("%Y")%>
          </div>
        </div>
      </div>
    </div>

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
