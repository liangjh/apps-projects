
<div class="span6">

<% if (devise_error_messages!.present?) %>
  <div class="alert alert-error">
    To complete the registration process, please fill in any missing information below:<br/>
    <%= devise_error_messages! %>
  </div>
<% end %>

<h2>Sign up</h2>
<br/>

<h3>Create an account with one of the services below:</h3>
<%= render :partial => "authentications/auth_providers" %>
<br/><br/>
<h3>OR</h3>
<br/>

<h3>Create a Saintstir &copy; account with the form below:</h3>
<br/>
<%= form_for(resource, :as => resource_name,
             :url => registration_path(resource_name),
             :html => {:class => "form-vertical well"}) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <% if (@user.password_required?) %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

  <% end %>
  <br/><br/>

  <%= render :partial => 'registrations/profile', :locals => {:formobj => f} %>

  <br/><br/>
  <%= f.submit "Sign up", :class => "btn btn-large btn-info" %>

<% end %>


</div>

